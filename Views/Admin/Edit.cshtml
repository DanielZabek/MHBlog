@model MHBlog.Models.CreateViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="row" style="padding-top:150px;">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.ID" />
            <div class="form-group">
                <label>Tytuł:</label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Krótki opis:</label>

                <textarea asp-for="Post.Description" style="height:350px;"></textarea>

            </div>
            <div class="form-control" method="post">
                <label>Post:</label>
              
                    <textarea asp-for="Post.Body" name="Body" id="Body"> </textarea>
                  
                </div>
            <div class="form-group">
                <label>Kategoria:</label>
                <select asp-for="Post.CategoryID" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryID","Name"))"></select>
            </div>
            <input type="hidden" asp-for="Post.ReleaseDate" />
            <input type="hidden" asp-for="Post.ImageName" />
        
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

<script>

        CKEDITOR.replace( 'Body' );


</script>
}
