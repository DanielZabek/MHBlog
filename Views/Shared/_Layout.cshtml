@using  System.Globalization;
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <meta property="og:image" content="https://marcelinahojda.pl/images/@ViewData["Image"]" />
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-107694381-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-107694381-1');
    </script>
   
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-5178637703920715",
            enable_page_level_ads: true
        });
    </script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="author" content="Marcelina Hojda" />
    <meta name="title" content="@ViewData["Title"]" />

    <title>@ViewData["Title"]</title>

    <!-- CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap-grid.css" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap-reboot.css" rel="stylesheet">
    <link href="~/css/mdb.css" rel="stylesheet">
    <!-- FONTS -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Amiri&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Abhaya+Libre&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Almendra&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light white fixed-top scrolling-navbar">
        <div class="container">
           <!-- <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="padding:0px; margin-right:0px"><img src="~/images/logo1.png" height="64"/></a> -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav navbar-left">
                   
                        <li class="nav-item dropdown">
                           
                            @if (ViewContext.RouteData.Values["action"].Equals("Index") || ViewContext.RouteData.Values["action"].Equals("CategoryView"))
                            {
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="padding:20px; margin-left:0px;  box-shadow:inset  0 4px 0px -1px  rgba(160,1,1,0.8);"> Blog </a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="Index" class="nav-link" style="padding:20px; margin-left:0px;"> Blog </a>
                            }


                        </li>

                   
                   
                    <li class="nav-item dropdown">
                        @if (ViewContext.RouteData.Values["action"].Equals("Contact"))
                        {
                            <a asp-route="contact" class="nav-link" style="padding:20px; margin-left:0px;box-shadow:inset  0 4px 0px -1px  rgba(160,1,1,0.8);">Kontakt </a>
                        }
                        else
                        {
                            <a asp-route="contact" class="nav-link" style="padding:20px; margin-left:0px;">Kontakt </a>
                        }
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" style="padding:20px">
                            Kategorie
                        </a>
                        @await Component.InvokeAsync("CategoryList", new { isDropdown = true })
                    </li>
                </ul>
        
                <ul class="navbar-nav ml-auto">
                    <li style="padding-top:7px"> <div class="fb-like" data-href="https://marcelinahojda.pl/" data-width="100" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div></li>
                    <li>
                         <form asp-action="Index" asp-controller="Home" method="get">
                            <div class="searchBox" style="margin-right:-10px;">
                                <input type="text" name="SearchString" placeholder="Czego szukasz?">
                                <button type="submit" class="btn btn-primary" style="height:40px; margin-right:10px">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </div>
                         </form>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <a asp-controller="Admin" asp-action="Index"class="btn btn-primary"style="height:40px; margin-left:10px" >
                                 PANEL
                            </a>       
                        </li>
                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout"  >
                                <input type="submit" value="Wyloguj" class="btn btn-primary" style="height:40px">
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <header class="masthead" style="box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.12), 0px 2px 8px 0px rgba(0,0,0,0.10); background-image: url(/images/@ViewData["Image"]);">
}
;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                  
                    <div class="post-heading" style="">
                        @if (ViewData["Title"].ToString() != "Marcelina Hojda - Blog" && ViewData["Title"].ToString() != "Kontakt")
                        {
                            <div class="rounded" style="background-color:rgba(0,0,0,0.5);padding-top:25px; padding-bottom:25px; margin-top:-25px; margin-bottom:-25px; border: 8px solid rgba(255,255,255,1); ">
                               
                            <h1 style="font-weight:800">@ViewData["Title"]</h1>
                            
                      
                        </div>
                        <div style="background-color:white; width:35%;margin-left:65%; margin-top:22px;"><h4 style="color:rgba(160,1,1,0.7);font-weight:600;">Marcelina Hojda</h4></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div style="vertical-align: text-top;" >
        @RenderSection("sharebar", required: false)
      
    </div>
   


   
    <div class="container" style="vertical-align: text-bottom;">
        <div class="row">
            <div class="col-md-9">
               
                
                @RenderBody()
            </div>
            <div class="col-md-3" style="">

                <div style="width:100%; text-align:center">

                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- marcelinahojda -->
                    <ins class="adsbygoogle"
                         style="display:block"
                         data-ad-client="ca-pub-5178637703920715"
                         data-ad-slot="2502391521"
                         data-ad-format="rectangle"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>

                <div class="card" style="text-align:left; margin-bottom:15px">
                    <div class="card-body">
                        <h4 class="card-title" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12)">O Mnie</h4>
                        <div style="text-align:center">
                            <img src="~/images/oMnie.jpg" class="img-thumbnail" alt="Cinque Terre" style="width:300px; margin-bottom:10px">
                        </div>
                        <p class="card-text" style="text-align:left; font-size:13px;">
                            <a>
                                Cześć!
                                Mam na imię Marcelina, studiuję dziennikarstwo i mam nadzieję, że w tym zawodzie również będę pracować. Pochodzę z Sosnowca i spróbuje was m.in. przekonać, że na Śląsku i w Zagłębiu jest fajnie. Interesuje się wszystkim i niczym, z naciskiem na szeroko pojętą kulturę: kinematografią, muzyką, modą oraz wszelakimi kuchniami świata jak i całym światem, chociaż moje zdolności kulinarne są mocno dyskusyjne. Spróbuje podzielić się z Wami moim spojrzeniem na świat i mam nadzieję, że dacie się do niego porwać.
                            </a>
                        </p>
                    </div>
                </div>


           


                        <div class="row">
                            <div class="col-md-12 col-sm-6">
                                <div class="card" style="text-align:left; margin-bottom:15px">
                                    <div class="card-body">
                                        <p class="lead" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12)">
                                            <i class="fa fa-archive" aria-hidden="true"></i>
                                            KATEGORIE:
                                        </p>
                                        @await Component.InvokeAsync("CategoryList")
                                    </div>
                                </div>
                            </div>
                            <!-- TAG CLOUD -->
                            <div class="col-md-12 col-sm-6">
                                <div class="card" style="text-align:left; margin-bottom:15px">
                                    <div class="card-body">
                                        <p class="lead" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12)">
                                            <i class="fa fa-tags" aria-hidden="true"></i>
                                            TAGI:
                                        </p>
                                        <p class="card-text" style="padding-left:15px">
                                            @await Component.InvokeAsync("TagsCloud")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-6">
                                <!-- INSTAGRAM -->
                                <div class="card" style="text-align:left; margin-bottom:15px">
                                    <div class="card-body">
                                        <a class="btn btn-clear" href="https://www.instagram.com/marcelinahojda/" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12);">
                                            <div class="fa fa-instagram" aria-hidden="true"></div>
                                            <div class="clear-text">INSTAGRAM</div>
                                        </a>
                                        <div>
                                            <iframe src="https://snapwidget.com/embed/449445" class="snapwidget-widget" allowTransparency="true" frameborder="0" scrolling="no" style="border:none; overflow:hidden; width:100%;"></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-6">
                                <!-- FACEBOOK -->
                                <div class="card" style="text-align:left; margin-bottom:15px;">
                                    <div class="card-body">
                                        <a class="btn btn-clear" href="https://www.facebook.com/marcelinahojda" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12);">
                                            <div class="fa fa-facebook" aria-hidden="true"></div>
                                            <div class="clear-text">FACEBOOK</div>
                                        </a>
                                        <div>
                                            <a href="https://www.facebook.com/marcelinahojda">
                                                <img src="~/images/profil.jpg" />
                                            </a>
                                            <div class="fb-follow" data-href="https://www.facebook.com/marcelinahojda" data-width="50" data-layout="button_count" data-size="small" data-show-faces="true"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- YOUTUBE -->
                        <div class="card" style="text-align:left; margin-bottom:15px;">
                            <div class="card-body">
                                <a class="btn btn-clear" href="https://www.youtube.com/channel/UCbDVZ31OSFZZSWLrOhgak0g" style="box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.12);">
                                    <div class="fa fa-youtube" aria-hidden="true"></div>
                                    <div class="clear-text">YOUTUBE</div>
                                </a>

                                <div class="video-container">

                                    <iframe width="200" height="120" src="https://www.youtube.com/embed/videoseries?list=PL3voGlFBbJSzGnbu-msSCo6ff49x5xnC9&amp;controls=0?ecver=1" frameborder="0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
      
            </div>
   
    <hr />
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 mx-auto" style="text-align:center">

                    <p class="copyright text-muted">Copyright &copy; Marcelina Hojda. Wszelkie prawa zastrzeżone 2017</p>
                    <p style="background-color:rgba(160, 1, 1,0.7); color:white; padding-top:10px; padding-bottom:10px; margin-left:-20px; margin-right:-20px">Stworzone przez Daniel Ząbek</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/mdb.min.js"></script>
    
    <!-- Facebook-->
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/pl_PL/sdk.js#xfbml=1&version=v2.10";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <!-- SnapWidget -->
    <script src="https://snapwidget.com/js/snapwidget.js"></script>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/pl_PL/sdk.js#xfbml=1&version=v2.10";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
 
    @RenderSection("scripts", required: false)

</body>
</html>

